  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

  <script>
    const tips = [
      "Set clear, achievable goals for each study session — small wins build momentum.",
      "Use a study planner to allocate time for each subject throughout the week.",
      "Start your day with your hardest subject — your brain is freshest in the morning.",
      "Avoid cramming. Spacing out your study time improves long-term memory.",
      "Use the Pomodoro method: 25 minutes of focus, 5 minutes of rest — repeat!",
      "Minimize distractions — silence your phone and close unused tabs.",
      "Prioritize tasks: Focus on what’s most important, not what’s easiest.",
      "Take breaks — resting your mind improves focus and retention.",
      "Track your time — find out where you waste it, then adjust your habits.",
      "Reward yourself after studying — it keeps you motivated for the next task."
    ];

    const authors = [
      "Instructor Miguel",
      "Instructor Cruz",
      "Instructor Santos",
      "Instructor Dela Peña",
      "Instructor Tan",
      "Instructor Javier",
      "Instructor Bautista",
      "Instructor Ramos",
      "Instructor Villanueva",
      "Instructor Mercado"
    ];

    // Tip of the day
    document.getElementById("dailyTip").innerText =
      tips[Math.floor(Math.random() * tips.length)];

    // Generate study tip cards
    const container = document.getElementById("tipsContainer");
    tips.forEach((tip, i) => {
      const author = authors[i % authors.length];
      const col = document.createElement("div");
      col.className = "col-md-4";
      col.innerHTML = `
        <div class="card tip-card p-3" data-title="Study Tip #${i + 1}" data-content="${tip}" data-author="${author}">
          <h5 class="fw-bold">Tip #${i + 1}</h5>
          <p>${tip}</p>
          <p class="posted-by">👨‍🏫 Posted by ${author}</p>
        </div>`;
      container.appendChild(col);
    });

    // Modal functionality
    const modal = new bootstrap.Modal(document.getElementById('infoModal'));
    document.addEventListener('click', e => {
      const card = e.target.closest('.tip-card, .wellness-card');
      if (!card) return;

      const title = card.dataset.title;
      const content = card.dataset.content;
      const img = card.dataset.img;
      const author = card.dataset.author;

      document.getElementById('modalTitle').innerText = title || '';
      document.getElementById('modalContent').innerText = content || '';
      document.getElementById('modalAuthor').innerText = `👩‍🏫 Posted by ${author || 'Instructor'}`;

      const modalImg = document.getElementById('modalImg');
      if (img) {
        modalImg.src = img;
        modalImg.style.display = 'block';
      } else {
        modalImg.style.display = 'none';
      }

      modal.show();
    });
  </script>
</body>
